<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:padding="@dimen/double_spacing"
    tools:context=".ViewTripFragment">

    <ImageView
        android:id="@+id/viewContact_contactImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:paddingBottom="@dimen/double_spacing" />

    <TextView
        android:id="@+id/viewContact_contactName"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewContact_contactImage"
        android:paddingBottom="@dimen/double_spacing"
        android:text="Name" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewContact_contactDetails"
        android:layout_below="@id/viewContact_contactName">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/double_spacing">

            <TextView
                android:id="@+id/viewContact_emailTitle"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewContact_contactName"
                android:text="Email Address" />

            <TextView
                android:id="@+id/viewContact_contactEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewContact_emailTitle"
                android:paddingBottom="@dimen/single_spacing"
                android:text="email" />

            <TextView
                android:id="@+id/viewContact_phoneNumberTitle"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewContact_contactEmail"
                android:text="Phone Number" />

            <TextView
                android:id="@+id/viewContact_phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewContact_phoneNumberTitle"
                android:text="phone number" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/viewContact_editBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewContact_contactDetails"
        android:layout_alignRight="@+id/viewContact_contactDetails"
        android:layout_margin="@dimen/single_spacing"
        android:backgroundTint="@color/colorPrimary"
        android:src="@drawable/ic_edit" />


</RelativeLayout>