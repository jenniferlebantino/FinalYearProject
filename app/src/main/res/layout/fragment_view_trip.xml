<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/double_spacing"
    tools:context=".ViewTripFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/viewTrip_tripImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="@dimen/single_spacing"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/viewTrip_TripTitle"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/viewTrip_tripImage"
                android:text="Title" />

            <TextView
                android:id="@+id/viewTrip_tripDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewTrip_TripTitle"
                android:layout_toRightOf="@+id/viewTrip_tripImage"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="5"
                android:text="Dates" />


            <TextView
                android:id="@+id/viewTrip_tripDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewTrip_tripDescription"
                android:layout_toRightOf="@+id/viewTrip_tripImage"
                android:layout_weight="1"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewTrip_tripImage"
                android:layout_marginTop="@dimen/double_spacing"
                android:orientation="vertical">

                <View
                    android:id="@+id/viewTrip_contactsDivider"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginBottom="@dimen/single_spacing"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/viewTrip_selectedContacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selected Contacts" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/viewTrip_selectContacts_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        tools:listitem="@layout/contact_item_small" />
                </HorizontalScrollView>

                <Button
                    android:id="@+id/viewTrip_addContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/single_spacing"
                    android:text="Select Contact"
                    android:textAllCaps="false" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>