<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEE1C7"
    android:padding="24dp"
    tools:context=".LoginActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="3">

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            app:srcCompat="@drawable/ce356938fc65c1f040dbcfec38dc7cc5" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:padding="24dp"
                android:rowCount="6">

                <TextView
                    android:id="@+id/login_loginTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="2"
                    android:gravity="center_horizontal"
                    android:text="Login"
                    android:textAlignment="center"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/login_emailAddress"
                    android:layout_width="match_parent"
                    android:layout_columnSpan="2"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:id="@+id/login_password"
                    android:layout_width="match_parent"
                    android:layout_columnSpan="2"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword" />

                <CheckBox
                    android:id="@+id/login_rememberMeCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="1"
                    android:text="Remember Me" />

                <EditText
                    android:id="@+id/editTextTextPersonName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="1"
                    android:layout_gravity="right"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Forgotten Password?"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/login_loginBtn"
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="2"
                    android:layout_gravity="right"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/medium_button"
                    android:enabled="true"
                    android:text="@string/login"
                    android:textColor="@android:color/white" />

            </GridLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/login_registerBtn"
            android:layout_width="232dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/large_button"
            android:clickable="true"
            android:enabled="true"
            android:focusable="true"
            android:text="@string/register"
            android:textColor="@android:color/white" />

    </GridLayout>


</RelativeLayout>